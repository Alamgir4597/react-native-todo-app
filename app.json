{
  "expo": {
    "name": "TodoApp",
    "slug": "todoapp",
    
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/todo-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/todo-app-loo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.yourcompany.yourappname",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptation.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
